---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { aboutPageConfig } from "../config/pages";
import CTA from "../components/CTA.astro";

// Extract sections from config
const aboutHeroSection = aboutPageConfig.sections.find(
  (section) => section.type === "aboutHero",
);
const storySection = aboutPageConfig.sections.find(
  (section) => section.type === "story",
);
const valuesSection = aboutPageConfig.sections.find(
  (section) => section.type === "values",
);
const teamSection = aboutPageConfig.sections.find(
  (section) => section.type === "team",
);
const ctaSection = aboutPageConfig.sections.find(
  (section) => section.type === "cta",
);
---

<Layout
  title={aboutPageConfig.title}
  description={aboutPageConfig.description}
  ogType={aboutPageConfig.ogType}
>
  <!-- Hero Section -->
  {
    aboutHeroSection && (
      <section
        class="section-padding"
        style="background: linear-gradient(to bottom, rgb(79 70 229 / 10%), white);"
      >
        <div class="container text-center">
          <h1 class="mb-6 text-4xl font-bold md:text-5xl">
            {aboutHeroSection.title}
          </h1>
          <p
            class="mx-auto max-w-3xl text-xl"
            style="color: var(--color-text-light);"
          >
            {aboutHeroSection.subtitle}
          </p>
        </div>
      </section>
    )
  }

  <!-- Our Story -->
  {
    storySection && (
      <section class="section-padding">
        <div class="container">
          <div class="grid grid-cols-1 items-center gap-12 md:grid-cols-2">
            <div>
              <h2 class="mb-2 text-3xl font-bold">{storySection.title}</h2>
              <p class="mb-6 text-lg" style="color: var(--color-text-light);">
                {storySection.subtitle}
              </p>
              <div
                class="story-content prose prose-lg"
                set:html={storySection.content}
              />

              {storySection.stats && (
                <div
                  class="mt-10 flex flex-wrap gap-x-12 gap-y-6 border-t pt-8"
                  style="border-color: var(--color-text-lighter);"
                >
                  {storySection.stats.map((stat, index) => (
                    <div
                      class="stat-item"
                      style={`animation-delay: ${index * 0.2}s;`}
                    >
                      <p
                        class="mb-1 text-4xl font-bold"
                        style="color: var(--color-primary);"
                      >
                        {stat.value}
                      </p>
                      <p
                        class="text-sm font-medium"
                        style="color: var(--color-text-light);"
                      >
                        {stat.label}
                      </p>
                    </div>
                  ))}
                </div>
              )}
            </div>
            <div class="relative">
              <div
                class="absolute -top-4 -left-4 h-24 w-24 rounded-full"
                style="background-color: var(--color-secondary); opacity: 0.1;"
              />
              <div
                class="absolute -right-4 -bottom-4 h-32 w-32 rounded-full"
                style="background-color: var(--color-primary); opacity: 0.1;"
              />
              <img
                src={storySection.image}
                alt="Our Story"
                class="relative z-10 w-full rounded-xl shadow-lg"
                style="border-radius: var(--radius-xl);"
              />
            </div>
          </div>
        </div>
      </section>
    )
  }

  <!-- Company Values -->
  {
    valuesSection && (
      <section
        class="section-padding"
        style="background-color: var(--color-background-alt);"
      >
        <div class="container">
          <div class="mb-16 text-center">
            <h2 class="mb-4 text-3xl font-bold">{valuesSection.title}</h2>
            <p
              class="mx-auto max-w-2xl"
              style="color: var(--color-text-light);"
            >
              {valuesSection.subtitle}
            </p>
          </div>

          <div class="mt-8 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
            {valuesSection.values.map((value) => (
              <div
                class="flex flex-col items-center p-6 text-center transition-transform duration-300 hover:-translate-y-2"
                style="background-color: var(--color-background); border-radius: var(--radius-lg); box-shadow: var(--shadow-sm); border: 1px solid var(--color-text-lighter);"
              >
                <Icon
                  name={value.icon}
                  class="mb-4 h-12 w-12"
                  style="color: var(--color-primary);"
                />
                <h3 class="mb-2 text-xl font-bold">{value.title}</h3>
                <p style="color: var(--color-text-light);">
                  {value.description}
                </p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Team Section -->
  {
    teamSection && (
      <section class="section-padding">
        <div class="container">
          <div class="mb-12 text-center">
            <h2 class="mb-4 text-3xl font-bold">{teamSection.title}</h2>
            <p
              class="mx-auto max-w-2xl text-lg"
              style="color: var(--color-text-light);"
            >
              {teamSection.subtitle}
            </p>
          </div>

          <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
            {teamSection.team.map((member) => (
              <div
                class="flex flex-col items-center p-6 text-center"
                style="background-color: var(--color-background); border-radius: var(--radius-lg); box-shadow: var(--shadow-sm); border: 1px solid var(--color-text-lighter);"
              >
                <div
                  class="mb-4 h-28 w-28 overflow-hidden rounded-full border-2"
                  style="border-color: var(--color-primary-light);"
                >
                  <img
                    src={member.image}
                    alt={member.name}
                    class="h-full w-full object-cover"
                  />
                </div>
                <h3 class="mb-1 text-xl font-bold">{member.name}</h3>
                <p class="mb-4" style="color: var(--color-primary);">
                  {member.role}
                </p>
                <p class="text-sm" style="color: var(--color-text-light);">
                  {member.bio}
                </p>

                {member.socialMedia && (
                  <div class="mt-4 flex space-x-3">
                    {member.socialMedia.map((social) => (
                      <a
                        href={social.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-text-light transition-colors hover:text-primary"
                        aria-label={social.platform}
                      >
                        <Icon name={social.icon} class="h-5 w-5" />
                      </a>
                    ))}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  {
    ctaSection && (
      <CTA
        title={ctaSection.title}
        subtitle={ctaSection.subtitle}
        ctaText={ctaSection.ctaPrimary.text}
        ctaLink={ctaSection.ctaPrimary.link}
        secondaryText={ctaSection.ctaSecondary?.text}
        secondaryLink={ctaSection.ctaSecondary?.link}
        trustedBy={ctaSection.trustedBy}
      />
    )
  }
</Layout>

<style>
  .story-content {
    color: var(--color-text-light);
  }

  .story-content p {
    margin-bottom: 1.25rem;
    line-height: 1.7;
  }

  .story-content p:last-child {
    margin-bottom: 0;
  }

  .stat-item {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
