---
interface Props {
  companyName?: string;
  companyTagline?: string;
}

const { 
  companyName = "SaaSify", 
  companyTagline = "Elevate your business with our innovative SaaS solutions" 
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-50 border-t border-slate-200">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 py-12 md:grid-cols-3 lg:grid-cols-5">
      <!-- Company info -->
      <div class="col-span-1 md:col-span-1 lg:col-span-2">
        <a href="/" class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-8 w-8 text-indigo-600">
            <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
          </svg>
          <span class="font-semibold text-xl">{companyName}</span>
        </a>
        <p class="mt-4 text-sm text-slate-600 max-w-xs">
          {companyTagline}
        </p>
        <div class="mt-6 flex space-x-4">
          <a href="#" class="text-slate-500 hover:text-indigo-600" aria-label="Twitter">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
          </a>
          <a href="#" class="text-slate-500 hover:text-indigo-600" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a href="#" class="text-slate-500 hover:text-indigo-600" aria-label="GitHub">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm font-semibold text-slate-900">Product</h3>
        <ul class="mt-4 space-y-3">
          <li><a href="/features" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Features</a></li>
          <li><a href="/pricing" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Pricing</a></li>
          <li><a href="/integrations" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Integrations</a></li>
          <li><a href="/changelog" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Changelog</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-slate-900">Company</h3>
        <ul class="mt-4 space-y-3">
          <li><a href="/about" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">About Us</a></li>
          <li><a href="/blog" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Blog</a></li>
          <li><a href="/careers" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Careers</a></li>
          <li><a href="/contact" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Contact</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-slate-900">Legal</h3>
        <ul class="mt-4 space-y-3">
          <li><a href="/privacy" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Privacy</a></li>
          <li><a href="/terms" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Terms</a></li>
          <li><a href="/cookies" class="text-sm text-slate-600 hover:text-indigo-600 transition-colors">Cookie Policy</a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom section with copyright -->
    <div class="flex flex-col md:flex-row justify-between py-6 border-t border-slate-200">
      <p class="text-sm text-slate-500">
        &copy; {currentYear} {companyName}. All rights reserved.
      </p>
      <div class="mt-4 md:mt-0">
        <a href="#" class="inline-flex h-9 items-center justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow transition-colors hover:bg-indigo-700 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-indigo-500">
          Get Started
        </a>
      </div>
    </div>
  </div>
</footer>